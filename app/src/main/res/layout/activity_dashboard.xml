<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:banner="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="app.helmi.gelis.controller.Dashboard">

    <app.helmi.gelis.controller.adapter.BannerAdapter
            android:id="@+id/activity_dashboard_adapter_banner_adapter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            banner:bb_scale="0.5625" />

    <android.support.v7.widget.RecyclerView
            android:id="@+id/activity_dashboard_adapter_event_adapter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:layout_marginTop="8dp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp" />
</LinearLayout>
